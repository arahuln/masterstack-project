<% layout('layouts/boilerplate') %> 
    
   




    
  <% for (let query of queries){%>

     
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <img class="w-full" src="<%= query.image%>" alt="Sunset in the mountains"><br>
    <div class="flex items-center">
        <img class="w-10 h-10 rounded-full mr-4" src="https://images.unsplash.com/photo-1597871040916-4b4c20ba08dd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8YmxhY2slMjBhbmQlMjB3aGl0ZSUyMHBob3RvZ3JhcGh5fGVufDB8fDB8fA%3D%3D&w=1000&q=80" alt="Avatar of Jonathan Reinink">
        <div class="text-sm">
          <p class="text-gray-900 leading-none">Jonathan Reinink</p>
          <p class="text-gray-600">Aug 18</p>
        </div>
      </div>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= query.question  %></div>
      <p class="text-gray-700 text-base">
        <%= query.description  %>
      </p>
    </div>
    <div class="flex justify-center">
        <a class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" href="/centres/queries<%= query._id %>">comment </a>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#photography</span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#travel</span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#winter</span>
    </div>
    
  </div>
</div>
</section>
  <% }%>